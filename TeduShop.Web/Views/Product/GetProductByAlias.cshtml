@model TeduShop.Web.Models.ProductViewModel
@{
    ViewBag.Title = "GetProductByAlias";
    Layout = "~/Views/shared/Layout.cshtml";
}

@if (Model != null)
{
<div class="main">
    <div class="content">
        <div class="content_top">
            <div class="back-links">
                <p><a href="index.html">Home</a> &gt;&gt; <a href="/danh-muc-san-pham/@Model.ProductCategory.Alias">@Model.ProductCategory.Name</a></p>
            </div>
           
         
            <div class="clear"></div>
        </div>
        <div class="section group">
            <div class="cont-desc span_1_of_2">
                <div class="grid images_3_of_2">
                    <img src="@Model.Image" alt="@Model.Name">
                </div>
                <div class="desc span_3_of_2">
                    <h2>@Model.Name </h2>
                    <p>@Model.Description</p>
                    <div class="price">
                        <p>Price: <span>@Model.Price</span></p>
                    </div>
                    <div class="available">
                        <p>Available Options :</p>
                        <ul>
                            <li>
                                Color:
                                <select>
                                    <option>Silver</option>
                                    <option>Black</option>
                                    <option>Dark Black</option>
                                    <option>Red</option>
                                </select>
                            </li>
                            <li>
                                Size:<select>
                                    <option>Large</option>
                                    <option>Medium</option>
                                    <option>small</option>
                                    <option>Large</option>
                                    <option>small</option>
                                </select>
                            </li>
                            <li>
                                Quality:<select>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>
                            </li>
                        </ul>
                    </div>
                    <div class="share">
                        <p>Share Product :</p>
                        <ul>
                            <li><a href="#"><img src="/Assets/client/images/youtube.png" alt=""></a></li>
                            <li><a href="#"><img src="/Assets/client/images/facebook.png" alt=""></a></li>
                            <li><a href="#"><img src="/Assets/client/images/twitter.png" alt=""></a></li>
                            <li><a href="#"><img src="/Assets/client/images/linkedin.png" alt=""></a></li>
                        </ul>
                    </div>
                    <div class="add-cart">
                        <div class="rating">
                            <p>Rating:<img src="/Assets/client/images/rating.png"><span>[3 of 5 Stars]</span></p>
                        </div>
                        <div class="button"><span><a href="#">Add to Cart</a></span></div>
                        <div class="clear"></div>
                    </div>
                </div>
                <div class="product-desc">
                    <h2>Chi tiết sản phẩm</h2>
                   @Html.Raw(Model.Content)
                </div>
                <div class="product-tags">
                    <h2>Product Tags</h2>
                    <h4>Add Your Tags:</h4>
                    <div class="input-box">
                        <input type="text" value="@Model.Tags">
                    </div>
                    <div class="button"><span><a href="#">Add Tags</a></span></div>
                </div>
            </div>
            <div class="rightsidebar span_3_of_1">
                <h2>CATEGORIES</h2>
                <ul>
                    <li><a href="#">Mobile Phones</a></li>
                    <li><a href="#">Desktop</a></li>
                    <li><a href="#">Laptop</a></li>
                    <li><a href="#">Accessories</a></li>
                    <li><a href="#">Software</a></li>
                    <li><a href="#">Sports &amp; Fitness</a></li>
                    <li><a href="#">Footwear</a></li>
                    <li><a href="#">Jewellery</a></li>
                    <li><a href="#">Clothing</a></li>
                    <li><a href="#">Home Decor &amp; Kitchen</a></li>
                    <li><a href="#">Beauty &amp; Healthcare</a></li>
                    <li><a href="#">Toys, Kids &amp; Babies</a></li>
                </ul>
                <div class="subscribe">
                    <h2>Newsletters Signup</h2>
                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod.......</p>
                    <div class="signup">
                        <form>
                            <input type="text" value="E-mail address" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'E-mail address';"><input type="submit" value="Sign up">
                        </form>
                    </div>
                </div>
                <div class="community-poll">
                    <h2>Community POll</h2>
                    <p>What is the main reason for you to purchase products online?</p>
                    <div class="poll">
                        <form>
                            <ul>
                                <li>
                                    <input type="radio" name="vote" class="radio" value="1">
                                    <span class="label"><label>More convenient shipping and delivery </label></span>
                                </li>
                                <li>
                                    <input type="radio" name="vote" class="radio" value="2">
                                    <span class="label"><label for="vote_2">Lower price</label></span>
                                </li>
                                <li>
                                    <input type="radio" name="vote" class="radio" value="3">
                                    <span class="label"><label for="vote_3">Bigger choice</label></span>
                                </li>
                                <li>
                                    <input type="radio" name="vote" class="radio" value="5">
                                    <span class="label"><label for="vote_5">Payments security </label></span>
                                </li>
                                <li>
                                    <input type="radio" name="vote" class="radio" value="6">
                                    <span class="label"><label for="vote_6">30-day Money Back Guarantee </label></span>
                                </li>
                                <li>
                                    <input type="radio" name="vote" class="radio" value="7">
                                    <span class="label"><label for="vote_7">Other.</label></span>
                                </li>
                            </ul>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{ 
    var relatedProducts = (IEnumerable<TeduShop.Web.Models.ProductViewModel>)ViewBag.RelatedProduct;
}
        @*<div>
        @foreach(var product in relatedProducts)
        {
            <div><a href="@product.Alias"> <img  src="@product.Image"/>@product.Name </a> </div>
        }
            </div>*@


var moreImages = (List<string>)ViewBag.MoreImages;
<ul>
    @foreach(var image in moreImages)
    {
    <li><img src="@image" /></li>
    }
</ul>

<ul>
    @foreach (var tag in (IEnumerable<TeduShop.Web.Models.TagViewModel>)ViewBag.Tags)
    {
        <li><a href="/tags/@tag.ID">@tag.Name</a></li>
    }
</ul>



}
else
{
    <p>Sản phẩm này hiện không có</p>
}
